<div class="container">
  <h2 class="title">AETHER</h2>

  <form id="search-form">
    <input id="query" type="text" placeholder="Write Something..." />
    <button type="submit">Search</button>
  </form>

  <p id="loading" class="loading">Searching...</p>
  <ul id="results"></ul>
</div>

<style>
  :root {
    --primary: #29abd6;
    --primary-hover: #196781;
    --bg: #f5f7fa;
    --card-bg: #ffffff;
    --border: #e2e8f0;
    --text: #1e293b;
  }

  body {
    background: var(--bg);
  }

  .container {
    max-width: 600px;
    margin: 4rem auto;
    font-family: system-ui, sans-serif;
    text-align: center;
    background: var(--card-bg);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  }

  .title {
    margin-bottom: 1.5rem;
    color: var(--text);
  }

  form {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  input {
    flex: 1;
    padding: 0.7rem 1rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    font-size: 1rem;
    transition: border 0.2s, box-shadow 0.2s;
  }

  input:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 2px rgba(37,99,235,0.2);
    outline: none;
  }

  button {
    padding: 0.7rem 1.2rem;
    background: var(--primary);
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  button:hover {
    background: var(--primary-hover);
  }

  .loading {
    display: none;
    color: var(--text);
    opacity: 0.7;
    font-style: italic;
    margin-bottom: 1rem;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    background: var(--card-bg);
    border: 1px solid var(--border);
    margin: 0.5rem 0;
    padding: 0.8rem 1rem;
    border-radius: 8px;
    text-align: left;
    transition: transform 0.15s, box-shadow 0.15s;
  }

  li:hover {
    transform: translateY(-2px);
    box-shadow: 0 3px 10px rgba(0,0,0,0.06);
  }

  a {
    color: var(--primary);
    font-weight: 500;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .score {
    color: #475569;
    font-size: 0.9em;
    margin-top: 0.2rem;
  }
</style>

<script>
    const form = document.getElementById("search-form");
    const queryInput = document.getElementById("query");
    const loading = document.getElementById("loading");
    const resultsList = document.getElementById("results");

    form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const text = queryInput.value.trim();
    if (!text) return;

    resultsList.innerHTML = "";
    loading.style.display = "block";

    try {
        // Llamada al endpoint proxy de Astro
        const res = await fetch("/api/search", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ text }),
        });

        const data = await res.json();
        if (!data.urls) throw new Error("Respuesta inv√°lida");

        for (const item of data.urls) {
        const li = document.createElement("li");
        li.innerHTML = `
            <a href="${item.url}" target="_blank">${item.url}</a>
            <div class="score">Score: ${item.score}</div>`;
        resultsList.appendChild(li);
        }
    } catch (err) {
        const li = document.createElement("li");
        li.textContent = "Error al buscar o recibir datos.";
        resultsList.appendChild(li);
        console.error(err);
    } finally {
        loading.style.display = "none";
    }
    });
</script>
